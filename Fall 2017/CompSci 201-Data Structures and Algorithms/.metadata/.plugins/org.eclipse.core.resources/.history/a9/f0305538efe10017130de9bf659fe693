import java.util.*;

public class TreeTighten {

	public TreeNode tighten(TreeNode t) {
		tightenHelper(t);
		return t;
	}
	
	public void tightenHelper(TreeNode t) {
		if(t == null) {
			return;
		}
		if(t.left == null && t.right == null) {
			return;
		}
		tightenHelper(t.left);
		tightenHelper(t.right);
		if(t.left == null || t.right == null) {
			if(t.left == null) {
				t = t.right;
				return;
			}else {
				t = t.left;
				return;
			}
		}
	}
	
}
